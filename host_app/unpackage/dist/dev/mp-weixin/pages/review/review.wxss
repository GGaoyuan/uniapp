.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.no-data .no-data-image {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  width: 200rpx;
  margin-top: 200rpx;
}
.no-data .no-data-title {
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  color: #800f94;
}
.list-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.list-view .segment {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  background-color: #333;
  color: #fff;
  height: auto;
  text-align: center;
}
