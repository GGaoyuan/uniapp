.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.no-data .no-data-image {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  width: 200rpx;
  margin-top: 200rpx;
}
.no-data .no-data-title {
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  color: #800f94;
}
.review-student-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: aqua;
}
.review-student-info .top-area {
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: red;
}
.review-student-info .middle-area {
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: green;
  align-items: center;
}
.review-student-info .middle-area .info-area {
  display: flex;
  flex-direction: column;
}
.review-student-info .bottom-area {
  display: flex;
  flex-direction: row;
  background-color: yellow;
  width: 50%;
  justify-content: center;
  align-content: center;
}
.review-student-info .segmented-control {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border: 1px solid #e6e6e6;
  border-radius: 5px;
  overflow: hidden;
}
.review-student-info .segment {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  font-size: 14px;
}
.review-student-info .left-segment {
  color: #333333;
  border-right: 1px solid #e6e6e6;
}
.review-student-info .right-segment {
  color: #1E90FF;
}
.review-student-info .segment-divider {
  width: 1px;
  background-color: red;
  /* Adjust the height as needed */
}
.text-area {
  display: flex;
  justify-content: center;
  background-color: aqua;
}
.test {
  display: flex;
  justify-content: center;
  background-color: aqua;
  height: 200rpx;
}
.chat-custom-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
}
.chat-custom-text {
  font-size: 12px;
  color: #999;
}

