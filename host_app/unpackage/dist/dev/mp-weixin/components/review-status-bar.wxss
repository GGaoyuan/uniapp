
.container {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
		height: 100%;		
		background-color: white;
		color: red;
}
.status-image {
		margin-left: 30rpx;
		width: 80rpx;
		height: 80rpx;
}
.text-area {
		margin-left: 15rpx;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		color: #3D77F0;
}
.status-text {
		font-size: 18px;
		font-family: PingFangSC, PingFangSC-Medium;
}
.notice-text {
		font-size: 15px;
}
	
